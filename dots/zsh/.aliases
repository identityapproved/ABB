# Function to mount /dev/sdd1 to /home/$USER/drives/transcend
mount_transcend() {
    local mount_point="/home/$USER/drives/transcend"
    local device="/dev/sdd1"

    # Check if the device exists
    if [[ ! -e "$device" ]]; then
        echo "Error: $device not found."
        return 1
    fi

    # Create mount point directory if it doesn't exist
    if [[ ! -d "$mount_point" ]]; then
        echo "Creating mount point directory: $mount_point"
        mkdir -p "$mount_point"
    fi

    # Check if already mounted
    if mountpoint -q "$mount_point"; then
        echo "$mount_point is already mounted."
        return 0
    fi

    # Mount the device
    echo "Mounting $device to $mount_point"
    sudo mount "$device" "$mount_point"

    # Verify mount
    if mountpoint -q "$mount_point"; then
        echo "Successfully mounted $device to $mount_point"
    else
        echo "Failed to mount $device to $mount_point"
        return 1
    fi
}

